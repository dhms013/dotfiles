#!/bin/bash
entries="󰒲     Suspend\n󰍃     Logout\n    Lock\n󰜉    Reboot\n󰐥    Shutdown"

selected=$(echo -e "$entries" | walker --dmenu --width 295 --minheight 1 --maxheight 630| awk '{print $2}')

case $selected in
Lock) pidof hyprlock || hyprlock ;;
Shutdown) systemctl poweroff ;;
Reboot) systemctl reboot ;;
Suspend) systemctl suspend ;;
Logout) ghostty --title=float -e sudo killall sddm ;;
esac

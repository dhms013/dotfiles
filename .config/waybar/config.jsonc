{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 26,
  "modules-left": ["custom/omarchy", "temperature", "cpu", "memory", "hyprland/window"],
  "modules-center": ["hyprland/workspaces", "custom/screenrecording-indicator", "custom/update"],
  "modules-right": [
    "network#speed",
    "network",
    "bluetooth",
    "pulseaudio",
    "clock",
    "custom/notification",
    "group/tray-expander",
    "battery",
  ],
  "hyprland/workspaces": {
